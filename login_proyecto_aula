mensaje = [
    "cuida a los animales.",
    "Cada vida animal importa. Sé su voz, sé su protector.",
    "Los animales confían en nosotros para su bienestar. Seamos su voz, su protector y su fuente de amor y seguridad.",
    "Los animales son nuestros amigos, nuestros compañeros de viaje en este mundo. Trátalos con gentileza y bondad."
]

for mensaje in mensaje:
    print(mensaje)

class Usuario:
    def __init__(self, nombre, correo, contraseña):
        self.nombre = nombre
        self.correo = correo
        self.contraseña = contraseña
class SistemaUsuarios:
    def __init__(self):
        self.usuarios = []

    def agregar_usuario(self, nombre, correo, contraseña):
        nuevo_usuario = Usuario(nombre, correo, contraseña)
        self.usuarios.append(nuevo_usuario)
        print("registro con exito.")

    def verificar_correo_existente(self, correo):
        for usuario in self.usuarios:
            if usuario.correo == correo:
                return True
        return False

    def autenticar(self, correo, contraseña):
        for usuario in self.usuarios:
            if usuario.correo == correo and usuario.contraseña == contraseña:
                return True
        return False
class RefugioAnimales:
    def __init__(self):
        self.animales = []

    def agregar_animal(self, nombre, tipo):
        animal = {"Nombre": nombre, "Tipo": tipo}
        self.animales.append(animal)
        print("Animal agregado con éxito.")

    def mostrar_animales(self):
        if self.animales:
            print("\nLista de Animales:")
            for animal in self.animales:
                print(f"Nombre: {animal['Nombre']}, Tipo: {animal['Tipo']}")
        else:
            print("No hay animales registrados.")

    def buscar_animal(self, nombre):
        for animal in self.animales:
            if animal["Nombre"] == nombre:
                print(f"Nombre: {animal['Nombre']}, Tipo: {animal['Tipo']}")
                return
        print("No se encontró animal con ese nombre.")

    def editar_animal(self, nombre, nuevo_tipo):
        for animal in self.animales:
            if animal["Nombre"] == nombre:
                animal["Tipo"] = nuevo_tipo
                print("Animal editado con éxito.")
                return
        print("No se encontró animal con ese nombre.")

    def eliminar_animal(self, nombre):
        for animal in self.animales:
            if animal["Nombre"] == nombre:
                self.animales.remove(animal)
                print("Animal eliminado con éxito.")
                return
        print("No se encontró animal con ese nombre.")
def mostrar_menu():
    print("\n--- Menú del Refugio de Animales ---")
    print("1. Agregar Animal")
    print("2. Mostrar Animales")
    print("3. Buscar Animal")
    print("4. Editar Animal")
    print("5. Eliminar Animal")
    print("6. Salir")
def main():
    sistema_usuarios = SistemaUsuarios()
    refugio_animales = RefugioAnimales()

    while True:
        print("\n--- Inicio de Sesión o Registro ---")
        opcion = input("¿Ya tienes cuenta? (s/n): ").lower()

        if opcion == "s":
            correo = input("Correo electrónico: ")
            contraseña = input("Contraseña: ")

            if sistema_usuarios.autenticar(correo, contraseña):
                print("Inicio de sesión exitoso.")
                break
            else:
                print("Credenciales incorrectas. Intenta de nuevo.")
        elif opcion == "n":
            nombre = input("Nombre: ")
            correo = input("Correo electrónico: ")
            contraseña = input("Contraseña: ")

            if sistema_usuarios.verificar_correo_existente(correo):
                print("Correo electrónico ya registrado. Intenta con otro.")
            else:
                sistema_usuarios.agregar_usuario(nombre, correo, contraseña)
        else:
            print("Opción no válida. Por favor, seleccione 's' o 'n'.")

    while True:
        mostrar_menu()
        opcion = input("Seleccione una opción: ")

        if opcion == "1":
            nombre = input("Ingrese el nombre del animal: ")
            tipo = input("Ingrese el tipo del animal: ")
            refugio_animales.agregar_animal(nombre, tipo)
        elif opcion == "2":
            refugio_animales.mostrar_animales()
        elif opcion == "3":
            nombre = input("Ingrese el nombre del animal a buscar: ")
            refugio_animales.buscar_animal(nombre)
        elif opcion == "4":
            nombre = input("Ingrese el nombre del animal a editar: ")
            nuevo_tipo = input("Ingrese el nuevo tipo del animal: ")
            refugio_animales.editar_animal(nombre, nuevo_tipo)
        elif opcion == "5":
            nombre = input("Ingrese el nombre del animal a eliminar: ")
            refugio_animales.eliminar_animal(nombre)
        elif opcion == "6":
            print("bye")
            break
        else:
            print("Opción no válida. Por favor, seleccione una opción válida.")

if __name__ == "__main__":
    main()
